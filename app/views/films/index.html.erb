<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Episode</th>
      <th>Opening crawl</th>
      <th>Director</th>
      <th>Producer</th>
      <th>Release date</th>
      <th>Swapi url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.episode_id %></td>
        <td><%= film.opening_crawl %></td>
        <td><%= film.director %></td>
        <td><%= film.producer %></td>
        <td><%= film.release_date %></td>
        <td><%= film.swapi_url %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

